{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs {% endblock %}

{% block body %}
    <h1>Listes des utilisateurs</h1>
    <table class="table">
        <thead>
        <th>Id</th>
        <th>Email</th>
        <th>RÃ´les</th>
        <th>Inscription</th>
        <th> actions</th>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>
                    {% for role in user.roles %}
                        {% if role=="ROLE_USER" %}
                            Etudiant
                        {% elseif role=="ROLE_EDITOR" %}
                            Editeur
                        {% elseif role=="ROLE_ADMIN" %}
                            Administrateur
                        {% endif %}
                    {% endfor %}
                </td>
                <td></td>

                <td><a href="{{ path('modifier_utilisateur',{'id' :user.id}) }}"
                       class="btn btn-warning">Modifier</a></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">il n'y a pas d'etudiants inscrit</td>
            </tr>
        {% endfor %}
        </tbody>

    </table>


{% endblock %}
