<form method="post" action="{{ path('validation_delete', {'id': validation.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('Supprimer' ~ validation.id) }}">
    <button class="btn btn-success">Supprimer</button>
</form>
